#include <stdio.h>

int main() {
    
    int numero;

    printf("Introduce un numero:");
    scanf("%d",&numero);

    printf("Tabla de multiplicar manera Ascendente");
    for(int i=0; i <= 1000; i++){
        printf("%d x %d = %d\n", numero, i, numero*i);

    }
    printf("Tabla de multiplicar manera Descendente\n");
    for(int i=1000; i >= 0; i--){
        printf("%d x %d = %d\n", numero, i, numero*i);
    }
}
