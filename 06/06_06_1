#include <stdio.h>

int main() {
    int a = 10;       // Declaración de una variable entera
    int *p;           // Declaración de un puntero a entero

    p = &a;           // Asignación de la dirección de 'a' al puntero 'p'

    printf("El valor de a es %d\n", a);
    printf("El valor de a mediante el puntero es %d\n", *p);  // Desreferenciación
    printf("La dirección de a es %p\n", (void *)&a);
    printf("El valor del puntero p es %p\n", (void *)p);

    return 0;
}
